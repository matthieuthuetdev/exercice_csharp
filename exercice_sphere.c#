 namespace demarrage
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double r;
            double air;
            double volume;
            Console.WriteLine("rentrez le rayon de la sphère :");
           r = double.Parse(Console.ReadLine());
            air = (4 * Math.PI) * Math.Pow(r,2);
            volume = (4 / 3) * Math.PI * Math.Pow(r, 3);
            Console.WriteLine("l'aire de la sphère est égale à : " + air + "et sont volume est égale à : " + volume);
        }
    }
}