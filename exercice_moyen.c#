 namespace demarrage
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int premierNombre;
            int deuxiemeNombre;
            double moyenne;
                Console.WriteLine("saisisez un premier nombre :");
            premierNombre = int.Parse(Console.ReadLine());
            Console.WriteLine("saisisez un second nombre :");
            deuxiemeNombre = int.Parse(Console.ReadLine());
            moyenne = (premierNombre + deuxiemeNombre) / 2;
            Console.WriteLine(moyenne);
        }

    }
}