using System;

namespace demarrage
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int n , essai , saisie;
            n = Random(0, 100);
            do
            {
                Console.WriteLine("saisisez un nombre entre 0 et 100 et pour essayer de deviner le nombre corecte :");
                saisie = Console.ReadLine();

            }
            while (saisie != n){
                if (saisie < n)
                {
                    Console.WriteLine("s'est plus !");
                }
                else if (saisie > n)
                {
                    Console.WriteLine("s'est moin !");
                }
                else
                {
                    Console.WriteLine($"bravo vous avez trouver le bon nombre en {essai} ");

                }
            }
    }
}