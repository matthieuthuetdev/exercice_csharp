using System;
using System.ComponentModel.DataAnnotations.Schema;
using System.Net.Mail;

namespace Demarrage
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double solde , depense , nouveau_solde ;
            int nombre_de_magasin;
            do
            {
                Console.WriteLine("saisisez le montant que barnabé posède avant de faire ces cources :");
                solde = double.Parse(Console.ReadLine());
            }while(solde < 1);
            
            
            nombre_de_magasin = 0;
            while (solde > 1)
            {
                nombre_de_magasin +=1;
                depense = solde / 2 + 1;
                nouveau_solde = solde - depense;
            }
            nombre_de_magasin++;
            depense = solde;
            nouveau_solde -= depense;
            Console.WriteLine($"avec un solde iniciale de {nouveau_solde} il peut effectuer des achat dans {nombre_de_magasin} magasin.");
        }

    }
}